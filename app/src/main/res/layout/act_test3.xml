<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:clipChildren="false"
    >

    <Button
        android:id="@+id/btn_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set trans"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btn_not_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_trans"
        android:layout_centerHorizontal="true"
        android:text="set not trans"
        />

    <FrameLayout
        android:layout_below="@id/btn_not_trans"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff"
        >
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/shadow1"
            android:layout_marginLeft="-10dp"
            />

    </FrameLayout>



</RelativeLayout>